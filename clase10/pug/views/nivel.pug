extends layout 


block renderizar
    div(class="jumbotron")
        h1(class="text-dark d-flex justify-content-center ") LISTA DE PRODUCTOS

        form(action="/productos" method="post" class="container-fluid text-center")

            div(class="form-group text-primary")
                label(for="nombre") <b>Nombre</b>
                input(id="nombre" class="form-control" type="text" name="nombre")
        

            div(class="form-group text-primary")
                label(for="precio") <b>Precio</b>
                input(id="precio" class="form-control" type="number" name="precio")
        
            div(class="form-group text-primary")
                label(for="imagen") <b>URL de la Imagen</b>
                input(id="imagen" class="form-control" type="text" name="imagen")
            

            button(class="btn btn-primary") Enviar

        hr

        - const leyenda = "No se encontraron datos"
        h2(class="text-danger my-5 text-center") PRODUCTOS AGREGADOS

            if productos.length > 0 
                div(class="table-responsive")
                    table(class="table table-dark table-striped")
                        tr(class="text-warning") 
                            th Nombre 
                            th Precio
                            th Imagen

                        each producto in productos
                            tr
                                td!=producto.nombre
                                td!=producto.precio
                                td
                                    img(style="width: 80px;" src!=producto.imagen, alt="sin imagen")               
                            
            else 
                h3(class="alert alert-danger")=leyenda
