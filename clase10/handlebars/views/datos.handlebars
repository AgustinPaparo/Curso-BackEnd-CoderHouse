<h1 class="text-center text-danger">LISTA DE PRODUCTOS</h1>


<form action="/productos" method="post" class="text-center">

    <div class="form-group">
        <label for="nombre"><b>Nombre</b></label>
        <input id="nombre" class="form-control" type="text" name="nombre">
    </div>

    <div class="form-group">
        <label for="precio"><b>Precio</b></label>
        <input id="precio" class="form-control" type="number" name="precio">
    </div>

    <div class="form-group">
        <label for="imagen"><b>URL de la Imagen</b></label>
        <input id="imagen" class="form-control" type="text" name="imagen">
    </div>

    <button class="btn btn-primary">Enviar</button>
</form>



<h2 style="color:crimson;">PRODUCTOS AGREGADOS</h2>



{{#if productos }} 
    <div class="table-responsive">
        <table class="table table-dark table-striped">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            {{#each productos}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{precio}}</td>
                <td><img style="width:80px;height:80px"alt="sin imagen"src="{{imagen}}"></td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}} 
        <h3 class="alert alert-danger">no se encontraron datos</h3>
{{/if}}