<div class="container">
    <div class="text-center">
        <form class="col-4 bg-light p-2 border rounded-4 border-danger" style="--bs-border-opacity: .25;" id="productForm">
            <h3 class="text-muted text-primary mb-3">Agregar productos nuevos</h3>
            <label class="form-label">Nombre producto</label>
            <input class="form-control col-4" type="text" name="title" id="title"  />
            <label class="form-label">Precio</label>
            <input class="form-control col-4" type="number" name="price" id="price"  />
            <label class="form-label">URL de la Imagen</label>
            <input class="form-control col-4" type="text" name="thumbnail" id="thumbnail" />
            <button class="btn btn-primary my-2 " type="submit" value="one" >Enviar</button>
        </form>
    </div>

    <div id="productsContainer"></div>

